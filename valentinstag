<script>
    const neinBtn = document.getElementById("nein");
    const jaBtn = document.getElementById("ja");
    const antwort = document.getElementById("antwort");

    // Nein-Button bewegt sich bei Tippen (iPhone-optimiert)
    neinBtn.addEventListener("click", () => {
        const x = Math.random() * (window.innerWidth - 100);
        const y = Math.random() * (window.innerHeight - 100);
        neinBtn.style.position = "absolute";
        neinBtn.style.left = x + "px";
        neinBtn.style.top = y + "px";
        neinBtn.style.transform = `scale(${Math.random() + 1})`;
    });

    // Ja-Button zeigt Herz
    jaBtn.addEventListener("click", () => {
        document.querySelector('h1').style.display = "none";
        document.querySelector('img.dackel').style.display = "none";
        document.querySelector('div').style.display = "none"; // Buttons ausblenden
        antwort.style.display = "flex";
    });
</script>

